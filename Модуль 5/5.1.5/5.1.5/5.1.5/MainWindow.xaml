<Window x:Class="_5._1._5.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Display" Grid.Row="0" IsReadOnly="True" TextAlignment="Right" FontSize="24" Margin="5"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="7" Grid.Row="0" Grid.Column="0" Click="Number_Click"/>
            <Button Content="8" Grid.Row="0" Grid.Column="1" Click="Number_Click"/>
            <Button Content="9" Grid.Row="0" Grid.Column="2" Click="Number_Click"/>
            <Button Content="/" Grid.Row="0" Grid.Column="3" Click="Operation_Click"/>
            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="Number_Click"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="Number_Click"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="Number_Click"/>
            <Button Content="*" Grid.Row="1" Grid.Column="3" Click="Operation_Click"/>
            <Button Content="1" Grid.Row="2" Grid.Column="0" Click="Number_Click"/>
            <Button Content="2" Grid.Row="2" Grid.Column="1" Click="Number_Click"/>
            <Button Content="3" Grid.Row="2" Grid.Column="2" Click="Number_Click"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" Click="Operation_Click"/>
            <Button Content="0" Grid.Row="3" Grid.Column="0" Click="Number_Click"/>
            <Button Content="." Grid.Row="3" Grid.Column="1" Click="Number_Click"/>
            <Button Content="=" Grid.Row="3" Grid.Column="2" Click="Equals_Click"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" Click="Operation_Click"/>
            <Button Content="C" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Click="Clear_Click"/>
        </Grid>
    </Grid>
</Window>