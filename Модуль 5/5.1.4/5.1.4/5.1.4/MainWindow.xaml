<Window x:Class="_5._1._4.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Content="Открыть изображение" Click="OpenImage_Click" Margin="5" Grid.Row="0"/>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="ImageDisplay" Stretch="Uniform"/>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <TextBlock Text="Размер:" Margin="5"/>
            <Slider x:Name="ScaleSlider" Minimum="0.1" Maximum="5" Value="1" Width="200" ValueChanged="ScaleSlider_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>