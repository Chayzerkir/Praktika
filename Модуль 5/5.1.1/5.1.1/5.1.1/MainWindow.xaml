<Window x:Class="_5._1._1.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Линия" Click="DrawLine_Click" Margin="5"/>
            <Button Content="Круг" Click="DrawCircle_Click" Margin="5"/>
            <Button Content="Квадрат" Click="DrawSquare_Click" Margin="5"/>
            <Button Content="Очистить" Click="ClearCanvas_Click" Margin="5"/>
        </StackPanel>
        <Canvas x:Name="DrawingCanvas" Grid.Row="1" Background="White" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp"/>
    </Grid>
</Window>